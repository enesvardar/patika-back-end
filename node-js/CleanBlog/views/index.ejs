<!DOCTYPE html>
<html lang="en">

<%- include('partials/_header') -%>

  <body>

    <%- include('partials/_navigation') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="site-heading">
                <h1>Clean Blog</h1>
                <span class="subheading">A Blog Theme by Start Bootstrap</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">

            <% for (let i=0; i < post.length; i++) { %>

              <div class="post-preview">
                <a href="/post/<%= post[i]._id %>">
                  <h2 class="post-title">
                    <%= post[i].title %>
                  </h2>
                  <h3 class="post-subtitle">
                    <%= post[i].detail %>
                  </h3>
                </a>
                <p class="post-meta">Posted by
                  <a href="#">Start Bootstrap</a>
                  <% post[i].dataCreated %>
                </p>

                <div class="form-group mb-0">
                  <a type="submit" href="/post/edit/<%= post[i]._id %>" class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Edit</span></a>
                </div>
                
                <div class="form-group mb-0 mt-1">
                  <a type="submit" href="/post/del/<%= post[i]._id %>" class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Delete</span></a>
                </div>

              </div>
              <hr>

              <% } %>

                <!-- Pager -->
                <div class="clearfix">
                  <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
                </div>
          </div>
        </div>
      </div>

      <hr>

      <%- include('partials/_footer') -%>


        <!-- Bootstrap core JavaScript -->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Custom scripts for this template -->
        <script src="js/clean-blog.min.js"></script>

  </body>

</html>